%h1= large_icon('Star') + ' ' + "Entertainment Types"
%div.box
  %span.hmenu
    = icon 'Plus', new_admin_entertainment_type_path
    =link_to "Add a new entertainment type", new_admin_entertainment_type_path
-unless @entertainment_types.blank?
  %ul.entertainment_types
    -@entertainment_types.each do |a| 
      %li[a]
        =link_to a.title, edit_admin_entertainment_type_path(a.id)
        = icon 'Write', edit_admin_entertainment_type_path(a.id)
        = trash_icon(a, admin_entertainment_type_path(a), "#{a.title}")