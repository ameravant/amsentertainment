- content_for(:meta_title) { concat "Edit #{h @contact_group.name}" }

%h1= yield(:meta_title)

.box
  - form_for [:admin, @contact_group], :html => { :method => :put } do |f|
    = f.error_messages
    %table{:cellspacing => 0}
      = render :partial => "form", :locals => { :f => f }
    - fancy_submit admin_contact_groups_path do
      = f.submit
