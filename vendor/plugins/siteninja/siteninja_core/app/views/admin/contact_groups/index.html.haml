- content_for(:title) { concat "Contact Groups" }

%h1 Contact Groups

%div.box
  /.float-right= render :partial => "/shared/search"
  %span.hmenu
    = icon 'Plus', new_admin_contact_group_path
    = link_to 'Create a new contact group', new_admin_contact_group_path

- unless params[:q].blank?
  %h2== Found #{pluralize @contacts.size, "contact"}

%p To edit a contact groups options click on it.

%table{ :cellspacing => 0 }
  %thead
    %tr
      %th Name      
  %tbody
    - for contact_group in @contact_groups
      %tr[contact_group]{ :class => cycle('odd','even') }
        %td
          = icon 'Write', edit_admin_contact_group_path(contact_group)
          = link_to h(contact_group.name), edit_admin_contact_group_path(contact_group)
        %td= trash_icon(contact_group, admin_contact_group_path(contact_group), "#{h(contact_group.name)}")
