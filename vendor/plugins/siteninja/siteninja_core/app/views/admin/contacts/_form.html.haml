= f.error_messages
%table{:cellspacing => 0}
  %tr{:class => cycle('odd','even')}
    %td= f.label :first_name
    %td= f.text_field :first_name
  %tr{:class => cycle('odd','even')}
    %td= f.label :last_name
    %td= f.text_field :last_name
  %tr{:class => cycle('odd','even')}
    %td= f.label :email
    %td= f.text_field :email
  %tr{:class => cycle('odd','even'), :style => "width:210px;"}
    - if @contact_groups
      %td Contact Group
      %td   
        - for cg in @contact_groups
          .contact_group_form
            = check_box_tag "contact[contact_group_ids][]", cg.id, @contact.contact_groups.include?(cg) ,:id => "group_checkbox_#{cg.id}"
            = label_tag "group_checkbox_#{cg.id}", cg.name
          = cycle(nil,nil,clear)
