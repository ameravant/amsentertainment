- unless @person.inquiries.empty?
  %h2 Inquiries
  %table.full_width{ :cellspacing => "0" }
    %thead
      %tr
        %th Message
        %th Time
        %th.center Options
    %tbody
      - for inquiry in @person.inquiries.recently_updated(5)
        %tr{ :class => cycle('odd', 'even') }
          %td= link_to h(truncate(inquiry.inquiry, :length => 30)), [:admin, inquiry]
          %td
            %span.small.gray
              == #{relative_time(inquiry.created_at, 1.day.ago).capitalize}
          %td.center= icon "Search", [:admin, inquiry]