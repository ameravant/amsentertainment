<%- content_for(:meta_title) { concat "Testimonials" } -%>

<h1><%= yield :meta_title %></h1>
<div>
	<span class="hmenu">
	  <%-if @owner != nil -%>
	    <%= icon "Plus", [:new, :admin, @owner, :testimonial] %>
	    <%= link_to "Add a new Testimonial", [:new, :admin, @owner, :testimonial] %>
	  <%-else-%>
	    Testimonials can only be edited from this page.
	  <%-end-%>
	</span>
</div>

<table cellspacing="0" class="full-width">
  <thead>
    <tr>
      <th>Quote</th>
      <th>Name</th>
      <th>Posted</th>
      <th class="center">Options</th>
    </tr>
  </thead>

  <tbody>
    <%- unless @testimonials.empty? %>
      <%- for r in @testimonials -%>
      <tr id="<%= dom_id r %>">
        <td> 
          <blockquote><%= link_to(r.quote, [:edit, :admin, @owner, r]) %></blockquote>
        </td>
        <td>
          <cite><%= link_to(r.author, [:edit, :admin, @owner, r]) %></cite>
        </td>
        <td><%= r.created_at.strftime("%m/%d/%Y @ %I:%M %p") %></td>
        <td class="center">
            <%= icon "Write", [:edit, :admin, @owner, r] %>
            <%= trash_icon(r, [:admin, r], "#{r.author}") %>
        </td>
      </tr>
      <%- end -%>
    <%- end -%>
  </tbody>
</table>
