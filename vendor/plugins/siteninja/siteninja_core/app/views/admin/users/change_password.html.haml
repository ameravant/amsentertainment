- content_for(:meta_title) { concat "Change password" }

%h1== Change #{@user.name}'s password

- form_tag change_password_save_admin_user_path(@user), :method => :put, :onsubmit => "form_submitted()" do
  %table{:cellspacing => 0}
    %tr{:class => cycle('odd','even')}
      %td New password:
      %td= text_field_tag 'password', nil, :autocomplete => "off"
  - fancy_submit edit_admin_user_path(@user) do
    = submit_tag 'Change Password'
