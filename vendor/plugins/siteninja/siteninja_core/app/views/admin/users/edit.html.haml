- content_for(:meta_title) { concat "Edit #{h @user.name}" }

%h1= yield(:meta_title)

.box
  = icon "Lock"
  = link_to "Change #{@user.name}'s password", [:change_password, :admin, @user]

%br

- form_for [:admin, @user], :html => { :method => :put } do |f|
  = f.error_messages
  %table{:cellspacing => 0}
    = render :partial => "form", :locals => { :f => f }
  - fancy_submit admin_users_path do
    = f.submit
