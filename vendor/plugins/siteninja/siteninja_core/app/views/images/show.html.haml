%h1= @image.image_title
= link_to(image_tag(@image.featured), @image.image(:large), :class => "fancy")
= @image.description

- content_for :side_column do
  - unless @previous_image.blank? and @next_image.blank?
    %h1= "#{@owner.title} Images"
    - unless @previous_image.blank?
      = link_to("&lt; #{image_tag(@previous_image.small_thumbnail)}", [@owner, @previous_image], :class => "previous-image")
    - unless @next_image.blank?
      = link_to("#{image_tag(@next_image.small_thumbnail)} &gt;", [@owner, @next_image], :class => "next-image")
  = clear
  - if @image.viewable_type == "Article"
    = render :partial => "articles/sidebar"
  - elsif @image.viewable_type == "Gallery"
    = render :partial => "galleries/sidecolumn"
  - elsif @image.viewable_type == "Product"
  