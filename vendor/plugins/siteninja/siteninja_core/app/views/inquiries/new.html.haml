= render :partial => "pages/show"

- form_for :inquiry, :url => inquiries_path, :html => { :onsubmit => "form_submitted('Sending your message...')"}  do |f|
  %fieldset
    = f.error_messages :header_message => "Unable to send your message"
    %table{ :cellspacing => 0 }
      - fields_for :person do |p|
        %tr
          %td= p.label :first_name
          %td
            = p.text_field :first_name
            %span{:class => "small red"} *required
        %tr
          %td= p.label :last_name
          %td
            = p.text_field :last_name
            %span{:class => "small red"} *required
        %tr
          %td= f.label :email
          %td
            = f.text_field :email
            %span{:class => "small red"} *required
        %tr
          %td= p.label :phone
          %td
            = p.text_field :phone, :size => 20
            %span{:class => "small red"} *required
        %tr
          %td= label_tag :event_date
          %td
            = date_select('event', 'event_date', :order => [:month, :day, :year])
        %tr
          %td= label_tag "event[event_loc]", "Event Location" 
          %td= text_field_tag "event[event_loc]", nil, :size => 67
        %tr
          %td= label_tag :start_time
          %td= time_select "event", "start_time", {:twelve_hour => true}
        %tr
          %td= label_tag :end_time
          %td= time_select "event", "end_time", {:twelve_hour => true}
        %tr.top
          %td{:colspan => "2"}
            = label_tag "event[hear_about]", "How did you hear about us?"
            = text_area_tag "event[hear_about]", nil, :size => "60x8"
        %tr.top
          %td{:colspan => "2"}
            = f.label :inquiry, "Questions/Comments?"
            %span{:class => "small red"} *required
            = f.text_area :inquiry,  :size => "60x8"
            = text_field_tag "company", nil, :size => 1, :id => "inquiry_company"
        -if @cms_config['modules']['newsletters']
          %tr
            %td{ :colspan => 2}
              %h2 Subscribe
              -for group in @groups
                = check_box_tag('person[person_group_ids][]', group.id, false, :id => "#{group.title}")
                %label{:for=> "#{group.title}"}= group.title
                %span= "&mdash; &nbsp;" + truncate(group.description, :length => 100)
                %br
    - fancy_submit do
      = f.submit "Submit inquiry"

