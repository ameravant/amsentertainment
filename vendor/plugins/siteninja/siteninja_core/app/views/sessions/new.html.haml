- form_tag session_path do
  -if @cms_config['website']['demo']
    %p
      %label{:for => "login"} Login
      %br
      = text_field_tag 'login', 'admin', :autocomplete => "off"
    %p
      %label{:for => "password"} Password
      %br
      = password_field_tag 'password', 'admin', :autocomplete => "off"
  - else
    %p
      %label{:for => "login"} Login
      %br
      = text_field_tag 'login', '', :autocomplete => "off"
    %p
      %label{:for => "password"} Password
      %br
      = password_field_tag 'password', '', :autocomplete => "off"
  %p
    %label{:for => "remember_me"} Remember me:
    = check_box_tag 'remember_me'
  %p= submit_tag 'Sign in', :class => 'big'
