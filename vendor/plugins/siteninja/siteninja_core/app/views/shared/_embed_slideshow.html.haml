- @slideshow = true
- if @images
  #images.galleryview
    - for image in @images
      .panel
        = image_tag(image.image.url(:slide), :title => image.title, :alt => image.caption)
        .panel-overlay
          %h2
            = h image.title
          %p
            = h image.caption
    %ul.filmstrip
      - for image in @images
        %li
          = image_tag(image.image.url(:small), :title => image.title, :alt => image.caption)

