- content_for :meta_title do
  Testimonials

- for testimonial in @testimonials
  %div.testimonial
    %blockquote
      = testimonial.quote
    %cite
      = testimonial.body.blank? ? testimonial.citation : link_to(testimonial.citation, [@owner, testimonial])

= render :partial => "pages/sidebar" if @owner.kind_of?(Page)
= render :partial => "articles/sidebar" if @owner.kind_of?(Article)